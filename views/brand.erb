<div class="top main-content row">
  <h1><%= @brand.name %></h1>
  <h3><%= @brand.price %></h3>
</div>

<div class="main-content">
  <div class="row">
    <div id="" class="col-xs-5 col-xs-offset-1">
      <div class="well">
        <h3>Available at</h3>
        <ul>
          <% @brand.stores.each do |store| %>
            <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div id="" class="col-xs-5">
      <div class="well">
        <h3>Add Store</h3>
        <form action="/brands/<%= @brand.id %>" method="post">
          <div class="form-group">
            <% @stores.each() do |store| %>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="store_ids[]" value="<%= store.id() %>"><%= store.name%>
                </label>
              </div>
            <% end %>
          </div>
          <button type="submit">Submit</button>
        </form>
      </div>
    </div>
