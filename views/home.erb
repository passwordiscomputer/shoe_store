<div class=" main-content row">
  <h1>Welcome Home</h1>
</div>


<div class="main-content">
  <div class="row">
    <div id="" class="col-xs-5 col-xs-offset-1">
      <div class="well">
        <h3>Add Store</h3>
        <form action="/add_store" method="post">
          <div class="form-group">
            <input name="name" type="text" class="form-control" id="name" placeholder="Store Name">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <div id="" class="col-xs-5">
      <div class="well">
        <h3>Add Brand</h3>
        <form action="/add_brand" method="post">
          <div class="form-group">
            <input name="name" type="text" class="form-control" placeholder="Brand Name">
              <input name="price" type="number" class="form-control" placeholder="Price">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="" class="col-xs-5 col-xs-offset-1">
      <div class="well">
        <h3>locations</h3>
          <ul>
            <% @stores.each do |store| %>
              <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
            <% end %>
          </ul>
      </div>
    </div>
    <div id="" class="col-xs-5">
      <div class="well">
        <h3>inventory</h3>
          <ul>
            <% @brands.each do |brand| %>
              <li><a href="/brands/<%= brand.id %>"><%= brand.name %> </a></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
